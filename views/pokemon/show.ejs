<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pokemon.name %> - Pokémon Wiki</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <%- include('../partials/header') %>

    <main class="container my-4">
      <% if (success && success.length) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>
      <% if (error && error.length) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <% if (errors && errors.length) { %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% errors.forEach(function(err) { %>
              <li><%= err %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <div class="row">
        <div class="col-md-4 mb-3">
          <% if (pokemon.imageUrl) { %>
            <img src="<%= pokemon.imageUrl %>" class="img-fluid rounded" alt="<%= pokemon.name %>" />
          <% } else { %>
            <div class="placeholder-image">No image</div>
          <% } %>
        </div>
        <div class="col-md-8">
          <h2>#<%= pokemon.pokedexNumber %> - <%= pokemon.name %></h2>
          <p><strong>Types:</strong> <%= pokemon.types.join(', ') %></p>
          <% if (pokemon.description) { %>
            <p><%= pokemon.description %></p>
          <% } %>

          <a href="/pokemon" class="btn btn-secondary me-2">Back to list</a>
          <a href="/pokemon/<%= pokemon._id %>/edit" class="btn btn-primary me-2">Edit</a>
          <form
            action="/pokemon/<%= pokemon._id %>/delete"
            method="POST"
            style="display:inline;"
            onsubmit="return confirm('Are you sure you want to delete this Pokémon?');"
          >
            <% if (requiresPassword) { %>
              <div class="mb-2">
                <input
                  type="password"
                  name="editPassword"
                  class="form-control form-control-sm d-inline-block w-auto me-2"
                  placeholder="Password"
                  autocomplete="current-password"
                  required
                />
              </div>
            <% } %>
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
  </body>
  </html>
