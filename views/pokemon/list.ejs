<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pokémon List - Pokémon Wiki</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <%- include('../partials/header') %>

    <main class="container my-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Pokémon List</h2>
        <a href="/pokemon/new" class="btn btn-success">Add Pokémon</a>
      </div>

      <form class="row g-3 mb-4" method="GET" action="/pokemon">
        <div class="col-md-4">
          <label for="type" class="form-label">Filter by type</label>
          <input
            type="text"
            class="form-control"
            id="type"
            name="type"
            placeholder="e.g. Fire"
            value="<%= query.type %>"
          />
        </div>
        <div class="col-md-4">
          <label for="sort" class="form-label">Sort by</label>
          <select id="sort" name="sort" class="form-select">
            <option value="">None</option>
            <option value="name" <%= query.sort === 'name' ? 'selected' : '' %>>Name</option>
            <option value="pokedexNumber" <%= query.sort === 'pokedexNumber' ? 'selected' : '' %>>Pokédex Number</option>
          </select>
        </div>
        <div class="col-md-4 d-flex align-items-end">
          <button type="submit" class="btn btn-primary me-2">Apply</button>
          <a href="/pokemon" class="btn btn-outline-secondary">Clear</a>
        </div>
      </form>

      <% if (!pokemon.length) { %>
        <p>No Pokémon found.</p>
      <% } else { %>
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <% pokemon.forEach(function(p) { %>
            <div class="col">
              <div class="card h-100">
                <% if (p.imageUrl) { %>
                  <img src="<%= p.imageUrl %>" class="card-img-top" alt="<%= p.name %>" />
                <% } %>
                <div class="card-body">
                  <h5 class="card-title">#<%= p.pokedexNumber %> - <%= p.name %></h5>
                  <p class="card-text">
                    <strong>Types:</strong>
                    <%= p.types.join(', ') %>
                  </p>
                  <a href="/pokemon/<%= p._id %>" class="btn btn-sm btn-outline-primary">Details</a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </main>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
  </body>
  </html>
